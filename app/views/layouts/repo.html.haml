!!!
%html{:lang => current_language}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %title= html_title
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    %meta{:content => "#{Redmine::Info.app_name}", :name => "description"}/
    %meta{:content => "#{Redmine::Info.app_name}", :name => "keywords"}/
    %meta{:content => "none", :name => "robots"}/
    = csrf_meta_tag
    = favicon
    = stylesheet_link_tag 'jquery/jquery-ui-1.11.0', 'application', 'responsive', :media => 'all' if (yield :css).empty?
    = stylesheet_link_tag "/stylesheets/jquery.datetimepicker"
    = stylesheet_link_tag 'rtl', :media => 'all' if l(:direction) == 'rtl'
    = javascript_heads
    = javascript_include_tag "applications"
    = stylesheet_link_tag 'applications'
    = heads_for_theme if (yield :css).empty?
    = yield :header_tags
    %link{:href => "/amg/ace/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %link{:href => "/amg/ace/css/fonts.googleapis.com.css", :rel => "stylesheet"}
    %link{:href => "/amg/ace/css/ace.min.css", :rel => "stylesheet", :class => "ace-main-stylesheet", :id => "main-ace-style"}
    %link{:href => "/amg/ace/css/ace-skins.min.css", :rel => "stylesheet"}
    %link{:href => "/amg/ace/css/ace-rtl.min.css", :rel => "stylesheet"}

    %script{:src => "/amg/ace/js/ace-extra.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery-ui.custom.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.ui.touch-punch.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.easypiechart.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.sparkline.index.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.flot.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.flot.pie.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/jquery.flot.resize.min.js", :type => "text/javascript"}

    %script{:src => "/amg/ace/js/ace-elements.min.js", :type => "text/javascript"}
    %script{:src => "/amg/ace/js/ace.min.js", :type => "text/javascript"}
    = call_hook :view_layouts_base_html_head
    / page specific tags
  %body{:class => body_css_classes}
    = render_browser_notice
    = render_top_notice
    = render :partial => "layouts/navigation"

    - if yield(:css).present?
      #content.contents
        .container
          - if %w(repo_requests custom_permissions).include?(controller_name) || (controller_name == "repos" && action_name != "compile_machine_status")
            .row.seamless.notification
              .col-md-2.notification-left
                %p.project-menu-info 代码管理
                = repo_sidebar
              
              .col-md-10
                = render_flash_messages
                = yield
                = call_hook :view_layouts_base_content
          - elsif (controller_name == "mokuais" && %w(list history).include?(action_name)) || controller_name == "apk_bases" || (controller_name == "productions" && %w(members records).include?(action_name))
            .row.seamless.notification
              .col-md-2.notification-left
                %p.project-menu-info 产品信息
                = system_info_sidebar
              
              .col-md-10
                = render_flash_messages
                = yield
                = call_hook :view_layouts_base_content
          - elsif (controller_name == "google_tools" || controller_name == "tools")
            .row.seamless.notification
              .col-md-2.notification-left
                %p.project-menu-info 工具
                = tools_sidebar
              
              .col-md-10
                = render_flash_messages
                = yield
                = call_hook :view_layouts_base_content
          - elsif (controller_name == "okrs" || controller_name == "okrs_settings")
            .row.seamless.notification
              .col-md-2.notification-left
                %p.project-menu-info 我的OKR
                = okrs_sidebar
              
              .col-md-10
                = render_flash_messages
                = yield
                = call_hook :view_layouts_base_content
          - else
            = render_flash_messages unless yield(:sidebar).present?
            = yield
            = call_hook :view_layouts_base_content
        #ajax-indicator{:style => "display:none;"}
          %span= l(:label_loading)
        #ajax-modal{:style => "display:none;"}
    .expand-pad.collapse
      .expand-pad-button
        %i.fa.fa-angle-double-left
      .expand-pad-content
    / Locale Setting
    = render :partial => "layouts/locale"


