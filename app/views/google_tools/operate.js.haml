:plain
  $(".nav-faster-new").removeClass('open');
  layer.closeAll();

  var operate_type = "#{@operate_type}";
  var tool = "#{@tool.try(:id)}";
  var category = "#{@category}";

  if(operate_type == "new"){
    var title = "新增#{@title}"
    var content = "/google_tools/"+operate_type+"?category="+category;
  }else if(operate_type == "edit"){
    var title = "编辑#{@title}"
    var content = "/google_tools/"+tool+"/"+operate_type+"?category="+category;
  };

  layer.open({
    type: 2,
    title: "<b>"+title+"</b>",
    area: ['880px', '560px'],
    zIndex: 999,
    moveType: 1,
    maxmin: false,
    shadeClose: false,
    content: content
  });
