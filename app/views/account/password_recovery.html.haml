%h2= l(:label_password_lost)
= error_messages_for 'user'
= form_tag(lost_password_path) do
  = hidden_field_tag 'token', @token.value
  .box.tabular
    %p
      %label{:for => "new_password"}
        = l(:field_new_password)
        %span.required *
      = password_field_tag 'new_password', nil, :size => 25
      %em.info= l(:text_caracters_minimum, :count => Setting.password_min_length)
    %p
      %label{:for => "new_password_confirmation"}
        = l(:field_password_confirmation)
        %span.required *
      = password_field_tag 'new_password_confirmation', nil, :size => 25
  %p= submit_tag l(:button_save)
