- if @user.auth_source
  %p= l(:mail_body_account_information_external, h(@user.auth_source.name))
- else
  %p
    = l(:mail_body_account_information)
    \:
  %ul
    %li
      = l(:field_login)
      \: #{@user.login}
    %li
      = l(:field_password)
      \: #{@password}
%p
  = l(:label_login)
  \: #{link_to @login_url, @login_url}
