= form_tag({:action => 'edit', :tab => 'attachments'}) do
  .box.tabular.settings
    %p
      = setting_text_field :attachment_max_size, :size => 6
      = l(:"number.human.storage_units.units.kb")
    %p
      = setting_text_area :attachment_extensions_allowed
      %em.info
        = l(:text_comma_separated)
        = l(:label_example)
        \: txt, png
    %p
      = setting_text_area :attachment_extensions_denied
      %em.info
        = l(:text_comma_separated)
        = l(:label_example)
        \: js, swf
    %p
      = setting_text_field :file_max_size_displayed, :size => 6
      = l(:"number.human.storage_units.units.kb")
    %p= setting_text_field :diff_max_lines_displayed, :size => 6
    %p
      = setting_text_field :repositories_encodings, :size => 60
      %em.info= l(:text_comma_separated)
  = submit_tag l(:button_save)
