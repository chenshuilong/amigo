- provide :nav, "2,1"
- provide :css, "bootstrap"

.h2= l(:product_definition_new)

= labelled_form_for :definitions, @definition, :html => {:class => 'form-wrapper version-release-form', :multipart => true} do |f|
  = error_messages_for 'definitions'
  .box.tabular
    #all_attributes
      = render :partial => 'form', :locals => { :f => f }
    %p#attachments_form
      %label= l(:label_attachments)
      = render :partial => 'attachments/form', :locals => {:container => @definition}
  .button-group.text-center
    = submit_tag l(:button_create), class: "btn btn-primary"


- html_title(l(:product_definition_new))
